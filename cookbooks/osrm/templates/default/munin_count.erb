#!/bin/bash

transportmodes="<%= @profiles.join(" ") %>"

case $1 in
   config)
        echo graph_title Routing requests
        echo graph_vlabel requests / second
	echo graph_args --base 1000
        echo graph_category OSRM
        for tm in $transportmodes
        do
            echo $tm.label $tm
            echo $tm.type DERIVE
            echo $tm.min 0
        done
        exit 0;;
esac

for tm in $transportmodes
do
    printf "$tm.value "
    wc -l /var/log/apache2/routing-times-$tm.log | cut -d' ' -f1
done
